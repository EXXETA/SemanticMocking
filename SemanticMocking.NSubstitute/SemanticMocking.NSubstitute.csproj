<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <!-- NuGet metadata -->
        <PackageId>SemanticMocking.NSubstitute</PackageId>
        <Version>1.0.1</Version>
        <Authors>Karim El Jed</Authors>
        <Company>EXXETA AG</Company>
        <PackRelease>true</PackRelease>
        <PackageProjectUrl>https://github.com/EXXETA/SemanticMocking/</PackageProjectUrl>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <PackageTags>nunit;xunit;mstest;nsubstitute;mocking</PackageTags>
        <Description>Implementation of SemanticMocking using NSubstitute.</Description>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\SemanticMocking.Abstractions\SemanticMocking.Abstractions.csproj" />
    </ItemGroup>
    
    <ItemGroup>
        <PackageReference Include="NSubstitute" Version="4.4.0" />
        <PackageReference Include="SemanticMocking.Abstractions" Version="1.0.1" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="..\LICENSE.txt" Link="LICENSE.txt" Pack="true" PackagePath="LICENSE.txt" />
    </ItemGroup>
</Project>
